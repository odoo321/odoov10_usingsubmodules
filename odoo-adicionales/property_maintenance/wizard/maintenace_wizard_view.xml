<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- Maintenance wizard Form View  -->
        <record id="maintenance_report" model="ir.ui.view">
            <field name="name">Maintenance Report</field>
            <field name="model">maintenance.report</field>
            <field name="arch" type="xml">
                <form string="Maintenance Report">
                    <separator string = "Maintenance Report" colspan="4"/>
                    <group colspan="4" col="4">
                        <field name="start_date" />
                        <field name="end_date" />
                    </group>
                    <footer>
                        <button special="cancel" string="Cancel" icon="fa-times-circle" class="oe_highlight oe_link"/>
                        <button name="print_report" string="Print" icon="fa-print" type="object" class="oe_highlight"/>
                </footer>
                </form>
            </field>
        </record>

        <!--Action for Maintenance wizard  -->
        <record id="action_maintenance_report" model="ir.actions.act_window">
            <field name="name">Maintenance Report</field>
            <field name="res_model">maintenance.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
            id="menu_maintenance_report"
            name="Maintenance Report"
            parent="menu_recurring_report_sub"
            action="action_maintenance_report"/>

</odoo>
