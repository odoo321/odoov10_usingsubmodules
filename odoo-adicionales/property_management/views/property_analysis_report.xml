<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_property_analysis_pivot" model="ir.ui.view">
         <field name="name">property.analysis.report.pivot</field>
         <field name="model">property.analysis.report</field>
         <field name="arch" type="xml">
             <pivot string="Property Analysis" disable_linking="True">
                 <field name="company" type="col"/>
                 <field name="property_id"  type="row"/>
                 <field name="price_total" type="measure"/>
              </pivot>
         </field>
    </record>
    
    <record id="action_property_analysis" model="ir.actions.act_window">
            <field name="name">Property Analysis</field>
            <field name="res_model">property.analysis.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">pivot</field>
    </record>

    <menuitem id="menu_property_analysis_report" action="action_property_analysis" parent="property_management.menu_report_sub"/>

</odoo>