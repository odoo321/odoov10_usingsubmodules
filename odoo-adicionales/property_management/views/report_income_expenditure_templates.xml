<odoo> 
		<!--Template For Income Expenditure Report-->
		<template id="report_income_expenditure">
			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="property_management.property_external_layout">
						<div class="page">
							<div class="row">
								<br/>
								<h3>
									<span><center>Income Expenditure Report</center></span>
								</h3>
							</div>
							<br/>
							<div class="row mt16 mb16">
								<div class="text-center">
									<strong>From:</strong>
									<span t-esc="data['start_date']"/>
									<strong>To:</strong>
									<span t-esc="data['end_date']"/>
								</div>
							</div>
							<br/>
							<table class="table table-condensed" width="100%">
								<tr style="background-color:#f9f9f9;">
									<td width="33%"><strong>Property</strong></td>
									<td width="33%" style="text-align:right;"><strong>Income</strong></td>
									<td width="33%" style="text-align:right;"><strong>Expenditure</strong></td>
								</tr>
								<tr t-foreach="get_details" t-as="t" style='page-break-inside: avoid;'>
									<td width="33%">
									   <span t-esc="t.get('property', '')"/>
									</td>
									<td width="33%" style="text-align:right;">
									   <span t-esc="t.get('total_income', '')"/>
									</td>
									<td width="33%" style="text-align:right;">
									   <span t-esc="t.get('total_expence', '')"/>
									</td>
								</tr>
							</table>
							<table width="100%" class="table table-condensed table-striped">
								<tr  t-foreach= 'get_details' t-as='ti'>
									<t t-if ="ti.get('total_in', '')">
									   <td width="33%">&#160;</td>
										<td width="33%" style="text-align:right;"><b>Income  : &#160;</b>
											<span t-esc="ti.get('total_in', '')"/>
										</td>
									</t>
								<t t-if ="ti.get('total_ex', '')">	
								<td width="33%" style="text-align:right;"><b>Expenditure  : &#160;</b>
								    <span t-esc="ti.get('total_ex', '')"/></td></t> 
								</tr>
							</table>
							<table width="100%" class="table table-condensed table-striped">
								<tr t-foreach= 'get_details' t-as='g'>
									<t t-if ="g.get('total_gr')">
										<td width="33%" style="text-align:right;"><b>Total Income  :&#160;
											<span t-esc="g.get('total_gr')"/>
										</b></td>
									</t> 
								</tr>
							</table>
						</div>
					</t>
				</t>
				</t>
		</template>
</odoo>