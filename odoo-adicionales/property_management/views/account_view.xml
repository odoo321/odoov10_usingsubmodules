<odoo>
	
		<!--Inherited account move form view to add button for printing report-->
		<record id="view_account_move_form_inherit_id" model="ir.ui.view">
			<field name="name">account.move.form</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_move_form"/>
			<field name="arch" type="xml">
				<xpath expr="/form/header/button[@name='button_cancel']" position="after">
					<button name="%(report_account_move_property)d" states="posted" string="Print" type="action" class="oe_highlight"/>
				</xpath>
			<!-- 	<xpath expr="//field[@name='line_ids']/tree/field[@name='analytic_account_id']" position="attributes">
					<attribute name="string">Tenancy Name</attribute>
				</xpath> -->
				<field name="date" position="after">
					<field name="schedule_date" readonly="1"/>
					<field name="source" readonly="1"/>
				</field>
			</field>
		</record>

		<!--Inherited account move line tree view to add property id-->
		<record id="view_voucher_form2_inherit_id" model="ir.ui.view">
			<field name="name">account.move.line.tree</field>
			<field name="model">account.move.line</field>
			<field name="inherit_id" ref="account.view_move_line_tree"/>
			<field name="arch" type="xml">
				<field name="journal_id" position="after">
					<field name="property_id"/>
					<field name="tenancy_id" />
					<field name="deposite"/>
				</field>
			</field>
		</record>
		<record id="view_move_line_form2_inherit_id" model="ir.ui.view">
			<field name="name">account.move.line.form</field>
			<field name="model">account.move.line</field>
			<field name="inherit_id" ref="account.view_move_line_form"/>
			<field name="arch" type="xml">
				<field name="blocked" position="after">
					<!--<field name="property_id"/> 
					<field name="tenancy_id"/> -->
					<field name="deposite"/>
				</field>
			</field>
		</record>
		<record id="view_journal_move_line_inherit_id" model="ir.ui.view">
			<field name="name">account.move.tree</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_move_form"/>
			<field name="arch" type="xml">
				<xpath expr="//form/sheet/notebook/page/field[@name='line_ids']/tree/field[@name='amount_currency']"
               position="before">
               		<field name="tenancy_id" domain="[('is_property','=', True)]"/>
					<field name="deposite"/>
           		</xpath>
				<!-- <field name="journal_id" position="after">
					<field name="property_id"/>
					<field name="tenancy_id"/>
				</field> -->
			</field>
		</record>

		<!--Inherited account payment form view to add property id-->
		<record id="view_payment_form_inherit_property_id" model="ir.ui.view">
			<field name="name">account.payment.form</field>
			<field name="model">account.payment</field>
			<field name="inherit_id" ref="account.view_account_payment_form"/>
			<field name="arch" type="xml">
				<field name="payment_date" position="after">
                    
					<field name="tenancy_id" domain="[('tenant_id.parent_id', '=', partner_id)]"
                        context="{'form_view_ref': 'property_management.property_analytic_view_form'}" />
					<field name="property_id" readonly="1"/>
<!--					attrs="{'invisible': [('partner_type','=','supplier')]}"-->
                    <field name="amount_due" string="Amount Due"/>
                    <field name="deposite_rec" />
                    <field name='payment_move_id' invisible="1"/>
				</field>
				<xpath expr="/form/header/button[@name='post']" position="after">
					<button name="back_to_tenancy" states="posted" string="Back" type="object" class="oe_highlight"/>
				</xpath>
			</field>
		</record>

		<!--Inherited account invoice form view to add property id-->
		<record id="view_account_invoice_prop_form_inherit" model="ir.ui.view">
			<field name="name">view.account.invoice.prop.form.inherit</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_form"/>
			<field name="arch" type="xml">
				<field name="payment_term_id" position="after">
					<field name="property_id"/>
					<field name="schedule_id"/>
					<field name="new_tenancy_id" invisible="1"/>
					<field name="journal_name_p" invisible='1'/>
				</field>		
			</field>
		</record>
		
</odoo>
