<odoo> 
<!--Template for account move-->
<template id="report_acc_move_prop">
	<t t-call="report.html_container">
		<t t-foreach="docs" t-as="o">
			<t t-call="report.external_layout">
				<div class="page">
					<div class="row">
						<div>
							<h3 >	
								<span>
									<center>
										<u>Account Move Report</u>
									</center>
								</span>
							</h3>
						</div>
					<table width="100%">
						<tr>
							<td width="50%" style="text-align:left;font-size: 15px;"><strong>Name :</strong>
							<span style="font-size: 15px;" t-field="o.name"/></td>
							<td width="50%" style="text-align:right;font-size: 15px;"><strong>Date :</strong>
							<span style="font-size: 15px;" t-field="o.date"/></td>
						</tr>
						<tr>
							<td>&#160;</td>
							<td>&#160;</td>
						</tr>
						<tr>
							<td width="50%" style="text-align:left;font-size: 15px;"><strong>Journal  :</strong>
							<span style="font-size: 15px;" t-field="o.journal_id.name"/></td>
							<td width="50%" style="text-align:right;font-size: 15px;"><strong>Reference :</strong>
							<span style="font-size: 15px;" t-field="o.ref"/></td>
						</tr>
						<tr>
							<td>&#160;</td>
							<td>&#160;</td>
						</tr>
						<tr>
							<td width="50%" style="text-align:left;font-size: 15px;"><strong>Partner Name :</strong>
							<span style="font-size: 15px;" t-field="o.partner_id.name"/></td>
							<td width="50%" style="text-align:right;font-size: 15px;">&#160;</td>
						</tr>
					</table>
					<br/>
				
					<p style="font-size: 15px;">
						Details of Journal Items.
					</p>
					<br/>
					<table class="table table-condensed" style='page-break-inside: avoid;'>
						<thead>
							<tr>
								<th>Account</th>
								<th>Label</th>
								<th>Analytic Account</th>
								<th>Debit</th>
								<th>Credit</th>
							</tr>
						</thead>
						<tbody>
							<t t-foreach="o.line_ids" t-as="move">
								<tr>
									<td ><t t-if="move.account_id">
										<span t-field="move.account_id.name"/></t>
									</td>
									<td ><t t-if="move.name">
										<span t-field="move.name"/></t>
									</td>
									<td ><t t-if="move.analytic_account_id">
										<span t-field="move.analytic_account_id.name"/></t>
									</td>
									<td >
										<span t-field="move.debit"/>
									</td>
									<td >
										<span t-field="move.credit"/>
									</td>
								</tr>
							</t>
						</tbody>
					</table>
					</div>
				</div>
			</t>
		</t>
	</t>
</template>

<!--Report for account move -->
<report 
	id="report_account_move_property"
	string="Account Move"
	model="account.move"
	report_type="qweb-pdf"
	file="property_management.report_acc_move_prop"
	name="property_management.report_acc_move_prop"
	menu="False" 
/>
    <record id="journal_paper_format" model="report.paperformat">
        <field name="name">Journal report format</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="margin_top">46</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">40</field>
        <field name="dpi">90</field>
        <field name="orientation">Landscape</field>
        <field name="report_ids" eval="[(4, ref('property_management.report_account_move_property'))]"></field>
    </record>
</odoo>
