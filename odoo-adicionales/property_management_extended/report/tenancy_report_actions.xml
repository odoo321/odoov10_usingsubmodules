<odoo>

	<report 
		id="report_contract_tenancy_id"
	    model="account.analytic.account"
	    string="Tenancy Contract"
	    report_type="qweb-pdf"
	    file="property_management_extended.report_tenancy_contract" 
	    name="property_management_extended.report_tenancy_contract"
	    menu="False" />
    
     <report 
        id="report_furniture_tenancy_id"
        model="account.analytic.account"
        string="Furniture Details"
        report_type="qweb-pdf"
        file="property_management_extended.report_tenancy_furniture_details" 
        name="property_management_extended.report_tenancy_furniture_details"
        menu="False" />

    <report 
        id="report_handover_tenancy_id"
        model="account.analytic.account"
        string="Handover"
        report_type="qweb-pdf"
        file="property_management_extended.report_handover_document" 
        name="property_management_extended.report_handover_document"
        menu="True" />

    <record id="paperformat_euro_lowmargin_handover" model="report.paperformat">
            <field name="name">European A4 low margin</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">35</field>
            <field name="margin_bottom">50</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">32</field>
            <field name="dpi">100</field>
            <field name="report_ids"
                eval="[(4, ref('property_management_extended.report_handover_tenancy_id'))

                        ]" /> 
        </record>

      <record id="paperformat_lp" model="report.paperformat">
            <field name="name">European A4 low margin</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">35</field>
            <field name="margin_bottom">17</field>
            <field name="margin_left">7</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">32</field>
            <field name="dpi">100</field>
            <field name="report_ids"
                eval="[(4, ref('account.action_report_general_ledger')),
                (4, ref('account.action_report_partnerledger')),

                        ]" /> 
        </record> 
</odoo>