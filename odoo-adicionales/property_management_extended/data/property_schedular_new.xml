<odoo>
	<data noupdate="1">
			<!-- Scheduler to done the Invoice-->
			<record id="invoice_validate_cron" model="ir.cron">
		        <field name="name">Invoice Validate</field>
		        <field name="interval_number">1</field>
		        <field name="interval_type">days</field>
		        <field name="numbercall">-1</field>
		        <field name="nextcall" eval="DateTime.now().strftime('%Y-%m-%d 05:00:00')" />
		        <field name="model" eval="'account.invoice'" />
		        <field name="function" eval="'validate_invoice_corn'" />
		        <field name="args" eval="'()'" />
		    </record>
	</data>
</odoo>