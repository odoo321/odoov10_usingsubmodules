<odoo>

	<record id="inherited_view_analytic_form_id" model="ir.ui.view">
		<field name="name">inherit.analytic.view.form</field>
		<field name="model">account.analytic.account</field>
		<field name="inherit_id" ref="property_management.property_analytic_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//page[@name='property_supplies']/group" position="after">
				<group colspan="2" col='2'>
					<field name="status_we"/>
				</group>
				<group col='4' colspan="4" string='Water Reading'>
					<group col='4' colspan="4">
							<field name="wacc" readonly='1' />
							<field name="wmeter" readonly='1' />
							<field name="wop_date" />
							<field name="wop_reading" />
							<field name="wcl_date" />
							<field name="wcl_reading" />
							<field name="wremarks" />
							<field name="get_whide" invisible='1'/>
					</group>
					<button class='oe_edit_only' name="get_water_reading" confirm="Are you sure you want to get older water readings ?" string="Get Reading" type="object" icon="fa-asterisk" attrs="{'invisible':[('get_whide','=',True)]}" />
				</group>
				<group col='4' colspan="4" string='Electricity Reading'>
					<group col='4' colspan="4">
						<field name="eacc" readonly='1'/>
						<field name="emeter" readonly='1'/>
						<field name="eop_date" />
						<field name="eop_reading" />
						<field name="ecl_date" />
						<field name="ecl_reading" />
						<field name="eremarks" />
						<field name="get_ehide" invisible='1'/>
					</group>
					<button name="get_electricity_reading" string="Get Reading" type="object" icon="fa-asterisk" class='oe_edit_only' confirm="Are you sure you want to get older electricity readings ?" attrs="{'invisible':[('get_ehide','=',True)]}"/>
				</group>
			</xpath>
			<notebook position="inside">
                <page string="Gate Pass Details">
                    <field name="gate_pass_no">
                    	<tree editable="top">
                    		<field name="pass_no" />
							<field name="date" />
							<field name="remarks" />
                    	</tree>
                    </field>
                </page>
                <page string="Furniture Details">

                    <field name='furniture_ids'>
                         <tree editable='top' >
                            <field name="furniture_id" />
                            <field name="quantity" />
                            <field name="uom_id"/>
                            <field name="remarks" />
                            <field name="property_id" invisible='1'/>
                            <field name='tenancy_id' invisible='1'/>

                       <!--      <field name='allocation_id' /> -->
                        </tree>
                    </field>
                     <field name='get_fhide' invisible='1'/>
                    <button class='oe_edit_only' type="object" name="compute_furniture_details"
					   string="Get Details" icon="fa-asterisk" colspan="3" confirm="Are you sure you want to get furniture details ?" attrs="{'invisible':[('get_fhide','=',True)]}"/>
					<button type="object" name="update_furniture_details"
					   string="Update Details" class='oe_edit_only' icon="fa-asterisk" colspan="3" confirm="Are you sure you want to update furniture details in selected property ?" />
                </page>
            </notebook>
		</field>
	</record> 

</odoo>